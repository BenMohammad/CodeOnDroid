<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/NavigationclassBackground"
    android:layout_height="match_parent"
    android:id="@+id/ll"
    tools:context=".Navigationclass">

    <android.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/toolbar">
    </android.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="right"
        android:text="Saved files"
        android:textColor="@color/CodeColor"
        android:fontFamily="serif"
        />

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tabTextColor="#000"
        android:id="@+id/tablayout"
        android:background="@color/NavigationclassBackground"
        >

    </com.google.android.material.tabs.TabLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >

        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/pager">
        </androidx.viewpager.widget.ViewPager>


    </LinearLayout>






    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="openEditor"
        android:background="@drawable/startcoding"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="32dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="serif"
            android:text="Start Coding"
            android:textColor="#000"
            android:textSize="24dp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/startcodingicon" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.005"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button1"
            android:padding="4dp"
            >
            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:id="@+id/btnCC"
                android:background="@drawable/codechef_logo"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button1"
            android:layout_marginLeft="70dp"
            android:padding="4dp"
            >
            <Button
                android:id="@+id/btnHR"
                android:layout_width="72dp"
                android:layout_height="72dp"


                android:background="@drawable/hackerrank_logo"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button1"
            android:layout_marginLeft="70dp"
            android:padding="4dp"
            >
        <Button
            android:id="@+id/btnCF"

            android:layout_width="72dp"
            android:layout_height="72dp"


            android:background="@drawable/codeforces_logo"
            />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="10dp"

        android:layout_gravity="center"
        android:text="Long Press for App Walkthorugh"
        android:textColor="@color/CodeColor"
        android:fontFamily="serif"
        />






</LinearLayout>

